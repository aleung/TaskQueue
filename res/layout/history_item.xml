<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="8dip" >

    <ImageView
        android:id="@+id/task_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:src="@drawable/round_delete_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/task_title"
            style="@style/listTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a very very long text. Should not be able to contained in one line." />

        <TextView
            android:id="@+id/task_age"
            style="@style/listSecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 days ago" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/task_restore"
        style="@style/imageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/br_next_icon" />

</LinearLayout>